#### Glow Filters
#(def css $FontGlowFilter1 ()
#	(glowFilter "0x08222a 0.3 0.8 0.8 10.0 2")) #122833 - prev color

(def css $FontGlowFilterBright ()
	#(glowFilter "0xffffff 0.6 10.0 4.0 1.5 2")
	(dropShadowFilter = { distance: 1, angle: 90, color: 0xFFFFFF, alpha:0.3, blurX: 5.0, blurY: 3.0, strength: 0.9, quality: 2 })
)

(def css $BlockGlowFilterBright ()
	#(glowFilter "0xffffff 0.6 10.0 6.0 0.35 2")
	(dropShadowFilter = { distance: 1, angle: 90, color: 0xFFFFFF, alpha:0.3, blurX: 4.0, blurY: 3.0, strength: 0.2, quality: 2 })
)

(def css $GlowDisabler ()
	#(glowFilter "0x000000 0.0 0.0 0.0 0.0 0")
	(dropShadowFilter = { distance: 0, angle: 0, color: 0x000000, alpha:0.0, blurX: 0.0, blurY: 0.0, strength: 0.0, quality: 0 })
)

(def css $DropShadowDisabler ()
	(dropShadowFilter = { distance: 0, angle: 0, color: 0x000000, alpha:0.0, blurX: 0.0, blurY: 0.0, strength: 0.0, quality: 0 })
)

