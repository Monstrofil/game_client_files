    'atbaRangeStyle' : { strokeClip: 'ATBARangeStroke', textColor: 0xA9C272, textClass: '$TextDefaultNM' },
    'aaRangeMaxStyle' : { strokeClip: 'AARangeStroke', textColor: 0xF0A522, textClass: '$TextDefaultNM' },
