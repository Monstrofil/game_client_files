
<ui>
	<block className="BinocularsBackground">
		<styleClass value="$FullsizeAbsolute"/>
		<bind name="mouseEnabled" value="false"/>
		<bind name="mouseChildren" value="false"/>
		<bind name="firstEntityDH" value="'cameraEntity'; CC.camera"/>
		<bind name="firstEntityDH" value="'submarineEntity'; CC.submarine"/>
		<bind name="watchDH" value="'isBinocular'; ['cameraEntity.camera.evIsBinocularChanged']; cameraEntity.camera.isBinocular"/>
		<bind name="watchDH" value="'depthIndex'; ['submarineEntity.submarine.evDepthChanged']; submarineEntity == null ? 0 : submarineEntity.submarine.depthIndex"/>
		<block className="binocular_top_left" type="native">
			<style>
				<position value="absolute"/>
				<left value="0"/>
				<top value="0"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex == 0; 0.3; {alpha: 0}; {alpha: 1}"/>
		</block>
		<block className="binocular_top" type="native">
			<style>
				<position value="absolute"/>
				<left value="50%"/>
				<marginLeft value="-50%"/>
				<top value="0"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex == 0; 0.3; {alpha: 0}; {alpha: 1}"/>
		</block>
		<block className="binocular_top_right" type="native">
			<style>
				<position value="absolute"/>
				<right value="0"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex == 0; 0.3; {alpha: 0}; {alpha: 1}"/>
		</block>
		<block className="binocular_bottom_left" type="native">
			<style>
				<position value="absolute"/>
				<left value="0"/>
				<bottom value="0"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex == 0; 0.3; {alpha: 0}; {alpha: 1}"/>
		</block>
		<block className="binocular_bottom" type="native">
			<style>
				<position value="absolute"/>
				<left value="50%"/>
				<marginLeft value="-50%"/>
				<bottom value="0"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex == 0; 0.3; {alpha: 0}; {alpha: 1}"/>
		</block>
		<block className="binocular_bottom_right" type="native">
			<style>
				<position value="absolute"/>
				<right value="0"/>
				<bottom value="0"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex == 0; 0.3; {alpha: 0}; {alpha: 1}"/>
		</block>
		<block className="periscope_left" type="native">
			<style>
				<position value="absolute"/>
				<left value="0"/>
				<top value="0"/>
				<height value="100%"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex &gt; 0; 0.3; {alpha: 0}; {alpha: 1}"/>
			<bind name="visible" value="submarineEntity != null"/>
		</block>
		<block className="periscope_right" type="native">
			<style>
				<position value="absolute"/>
				<right value="0"/>
				<top value="0"/>
				<height value="100%"/>
			</style>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex &gt; 0; 0.3; {alpha: 0}; {alpha: 1}"/>
			<bind name="visible" value="submarineEntity != null"/>
		</block>
		<block className="periscope_center" type="native">
			<styleClass value="$FullsizeAbsolute"/>
			<bind name="transition" value="isBinocular &amp;&amp; depthIndex &gt; 0; 0.3; {alpha: 0}; {alpha: 1}"/>
			<bind name="visible" value="submarineEntity != null"/>
		</block>
	</block>
</ui>
