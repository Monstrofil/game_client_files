<weathers.xml>
	<!-- Разовая смена погоды -->
	<scheme>
		<startWeight> 100 </startWeight>
		<step>
			<param>PCOW001_Sunny</param>
			<startWeight> 1 </startWeight>
			<duration>
				<min> 240 </min>
				<max> 240 </max>
			</duration>
			<transition> 180 </transition>
		</step>
		<step>
			<param>PCOW007_Dull</param>
			<startWeight> 0 </startWeight>
			<duration>
				<min> 1200 </min>
				<max> 1200 </max>
			</duration>
			<transition> 60 </transition>
		</step>
	</scheme>
</weathers.xml>