<data_center.battle.scheme.xml>
  <scheme>
    <battle>
      <!-- Common information about the battle 
           unbound example:
           (var info:cpp = "$DataCenter.battle.info")
      -->
      <info>
        <!-- Frames per second (FPS)
             unbound example:
             (var info:cpp = "$DataCenter.battle.info")
             (var fps:number = "info.FPS" (event "info.evChanged"))
        -->
        <FPS> 0 </FPS>

        <!-- Ping to game server im ms
             unbound example:
             (var info:cpp = "$DataCenter.battle.info")
             (var ping:number = "info.Ping" (event "info.evChanged"))
        -->
        <Ping> 0 </Ping>
      </info>
    </battle>
  </scheme>
</data_center.battle.scheme.xml>
