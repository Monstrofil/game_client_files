<particles.xml>
	<elements>
		<!-- .xyz Position + .w Age -->
		<POSITION>
			<type> FLOAT4 </type>
		</POSITION>

		<!-- 16 bytes -->

		<!-- Color -->
		<TEXCOORD>
			<semanticIndex> 0 </semanticIndex>
			<type> FLOAT16_4 </type>
		</TEXCOORD>

		<!-- Material -->
		<TEXCOORD>
			<semanticIndex> 1 </semanticIndex>
			<type> FLOAT16_4 </type>
		</TEXCOORD>

		<!-- 32 bytes -->

		<!-- Thickness -->
		<TEXCOORD>
			<semanticIndex> 2 </semanticIndex>
			<type> FLOAT1 </type>
		</TEXCOORD>

		<!-- Texture coords -->
		<TEXCOORD>
			<semanticIndex> 3 </semanticIndex>
			<type> SHORT2N </type>
		</TEXCOORD>
		
		<!-- .xyz Tangent + .w lightWrapAmount -->
		<TEXCOORD>
			<semanticIndex> 4 </semanticIndex>
			<type> UBYTE4N </type>
		</TEXCOORD>

		<!-- .x - flags, .y - lighting type, .z - albedoSteps, .w - emissionSteps -->
		<TEXCOORD>
			<semanticIndex> 5 </semanticIndex>
			<type> UBYTE4 </type>
		</TEXCOORD>

		<!-- 48 bytes -->

	</elements>
</particles.xml>
